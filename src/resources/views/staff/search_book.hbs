
{{> navbar_staff}}

	<!-- Page Content  -->
<div id="content" class="p-4 p-md-5 pt-5">
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6 mb-5">
			<h2 class="mb-4">Library</h2>
		</div>
		<div class="col-lg-6 col-md-6 col-sm-6 mb-5">
			<form class="form-inline" style="display: flex; justify-content: right" method="post" action="/staff/search">
				<input name="book" class="" type="search" placeholder="Tìm kiếm sách" style="border: 1px solid; margin-right: 10px; border-radius: 4px; width: 200px">
				<button class="btn btn-primary" type="submit">Tìm</button>
			</form>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 mb-5">
			<div class="promotion">
				<h5 class="product-title col-12 px-0 text-primary pb-2 mb-3">
                     <a href="/staff/book">Quay lại trang sách</a>
                </h5>
				<div id="promotion-row" class="row" style="min-height: 70vh;">
					{{#if search}}
						<div class="product-item mb-5 col-lg-3 col-sm-6">
							<div class="product-item-image border rounded">
								<a href="/book/{{search.slug}}">
									<img src="/images/{{search.image}}" alt="">
								</a>	
							</div>
							<div class="product-item-name">
								<p>{{search.name}}</p>
							</div>
							<div class="product-item-price">
								Mô tả: {{search.description}}
							</div>
							<div class="product-item-price">
								Số lượng: {{search.quantity}}
							</div>
							<div class="product-item-buy">
								<a class="btn btn-sm btn-outline-primary w-100 mt-2" href="/staff/book/{{search.slug}}">Chi Tiết</a>
							</div>
						</div>
					{{/if}}	
                    {{#else}}
                        <div class="text-center">
                            <h2>Từ khóa cảu bạn search không phù hợp, vui lòng nhập lại</h2>
                        </div>
                    {{/else}}
				</div>
			</div>
		</div>
	</div>
</div>
