
{{> navbar_staff}}

        <!-- Page Content  -->
    <div id="content" class="p-4 p-md-5 pt-5">
		<div class="container">
                <h1>Thống kê sách</h1>
                <div class="row">
                    <div class="col-lg-4">
                        <input type="number" placeholder="Năm" id="year" class="mx-2 mb-5" style="width: 250px">
                    </div>
                    <div class="col-lg-4">
                        <select id="month" class="mx-2 pb-1 pt-1 mb-5" style="width: 250px;">
                            <option value="">----</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                            <option value="11">11</option>
                            <option value="12">12</option>
                        </select>
                    </div>
                    <div class="col-lg-4">
                        <button id="btn-view" class="mx-2 btn btn-primary" style="width: 250px;">Xem</button>
                    </div>
                </div>  
                <canvas id="myChart" width="400" height="400"></canvas>
        </div>        
    </div>

<script>
    $('#btn-view').click(e => {
        let year = $('#year').val()
        let month = $('#month').val()

        fetch('/staff/getStatistic', {
            headers:{
                'Content-Type':'application/x-www-form-urlencoded'
            }, 
            method: 'POST',
            body:'year='+ year + '&month=' + month,
        })
        .then(res => res.json())
        .then(json => {
            if(json.code === 0){
                console.log("Lấy data thành công")
                console.log(json.data)
                //window.location.href = '/staff/book'
                let data = new Array()
                data.push(0)
                data.push(json.data.bookb)
                data.push(json.data.bookd)
                data.push(json.data.bookl)
                data.push(json.data.bookn)
                const ctx = document.getElementById('myChart').getContext('2d');
                const myChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['Sách','Tổng số sách cho mượn','Trả đúng hạn', 'Trả trễ hạn','Sách chưa trả'],
                        datasets: [{
                            label: 'Số lượng sách',
                            data: data,
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(54, 162, 235, 1)',
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            }
        })
        .catch(e => console.log(e))
        
    })
    
</script>
